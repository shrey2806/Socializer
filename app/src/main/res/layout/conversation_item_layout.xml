<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/request_display_image"
        android:layout_width="63dp"
        android:layout_height="64dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"


        android:src="@drawable/acc_image"
        app:srcCompat="@drawable/acc_image" />

    <TextView
        android:id="@+id/request_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/request_display_image"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/request_display_image"
        android:text="Display Name"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/conv_last_message_textv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_display_name"
        android:layout_alignStart="@+id/request_display_name"
        android:layout_marginTop="5dp" />

    <ImageView
        android:id="@+id/conv_online_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/request_display_name"
        android:visibility="invisible"
        app:srcCompat="@drawable/online_icon" />

</RelativeLayout>