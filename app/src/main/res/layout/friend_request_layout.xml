<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/request_display_image"
        android:layout_width="63dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"


        android:layout_marginTop="15dp"
        android:src="@drawable/acc_image"
        app:srcCompat="@drawable/acc_image" />

    <TextView
        android:id="@+id/request_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/request_display_image"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/request_display_image"
        android:text="Display Name"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_display_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Accept" />

    <Button
        android:id="@+id/reject_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_display_name"
        android:layout_marginStart="28dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/accept_button"
        android:background="@android:color/holo_red_light"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Reject"
        android:textColor="@android:color/white" />


</RelativeLayout>